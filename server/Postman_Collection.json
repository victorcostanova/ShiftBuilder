    {
      "name": "Admin Setup",
      "item": [
        {
          "name": "Create Admin User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    console.log(\"Admin user created:\", jsonData._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"pass\": \"admin123\",\n  \"firstname\": \"Admin\",\n  \"lastname\": \"User\",\n  \"username\": \"admin\",\n  \"birthDate\": \"1985-05-20\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/user/admin",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "admin"]
            },
            "description": "Create an admin user via API. Make sure permissions are initialized first."
          }
        },
        {
          "name": "Login as Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "console.log(\"Response Status:\", pm.response.code);",
                  "console.log(\"Response Body:\", pm.response.text());",
                  "",
                  "if (pm.response.code === 200) {",
                  "    try {",
                  "        const jsonData = pm.response.json();",
                  "        console.log(\"Parsed JSON:\", jsonData);",
                  "        ",
                  "        if (jsonData.token) {",
                  "            pm.collectionVariables.set(\"admin_token\", jsonData.token);",
                  "            console.log(\"✅ Admin token saved to collection variable:\", jsonData.token.substring(0, 50) + \"...\");",
                  "        } else {",
                  "            console.error(\"❌ No token in response:\", jsonData);",
                  "        }",
                  "        ",
                  "        if (jsonData.user && jsonData.user._id) {",
                  "            pm.collectionVariables.set(\"user_id\", jsonData.user._id);",
                  "            console.log(\"✅ User ID saved:\", jsonData.user._id);",
                  "        }",
                  "        ",
                  "        // Also set as environment variable if using environment",
                  "        if (pm.environment) {",
                  "            pm.environment.set(\"admin_token\", jsonData.token);",
                  "        }",
                  "    } catch (e) {",
                  "        console.error(\"❌ Error parsing response:\", e);",
                  "        console.error(\"Response text:\", pm.response.text());",
                  "    }",
                  "} else {",
                  "    console.error(\"❌ Login failed with status:\", pm.response.code);",
                  "    console.error(\"Response:\", pm.response.text());",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"pass\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/user/login",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "login"]
            }
          }
        },
        {
          "name": "Logout Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    // Clear ALL tokens (both regular and admin)",
                  "    pm.collectionVariables.set(\"token\", \"\");",
                  "    pm.collectionVariables.set(\"admin_token\", \"\");",
                  "    ",
                  "    // Also clear from environment if exists",
                  "    if (pm.environment) {",
                  "        pm.environment.set(\"token\", \"\");",
                  "        pm.environment.set(\"admin_token\", \"\");",
                  "    }",
                  "    ",
                  "    console.log(\"✅ All tokens cleared from variables\");",
                  "    console.log(\"✅ Token invalidated on server (blacklisted)\");",
                  "} else {",
                  "    console.error(\"❌ Logout failed:\", pm.response.code);",
                  "}"
                ]
