    {
      "name": "User",
      "item": [
        {
          "name": "Create User (Regular)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"user_id\", jsonData._id);",
                  "    console.log(\"User ID saved:\", jsonData._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"pass\": \"password123\",\n  \"firstname\": \"Test\",\n  \"lastname\": \"User\",\n  \"username\": \"testuser123\",\n  \"birthDate\": \"1990-01-15\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/user",
              "host": ["{{base_url}}"],
              "path": ["api", "user"]
            }
          }
        },
        {
          "name": "Login (Regular User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "console.log(\"Response Status:\", pm.response.code);",
                  "",
                  "if (pm.response.code === 200) {",
                  "    try {",
                  "        const jsonData = pm.response.json();",
                  "        ",
                  "        if (jsonData.token) {",
                  "            pm.collectionVariables.set(\"token\", jsonData.token);",
                  "            console.log(\"✅ Token saved to collection variable:\", jsonData.token.substring(0, 50) + \"...\");",
                  "        }",
                  "        ",
                  "        if (jsonData.user && jsonData.user._id) {",
                  "            pm.collectionVariables.set(\"user_id\", jsonData.user._id);",
                  "            console.log(\"✅ User ID saved:\", jsonData.user._id);",
                  "        }",
                  "        ",
                  "        if (pm.environment) {",
                  "            pm.environment.set(\"token\", jsonData.token);",
                  "        }",
                  "    } catch (e) {",
                  "        console.error(\"❌ Error parsing response:\", e);",
                  "    }",
                  "} else {",
                  "    console.error(\"❌ Login failed with status:\", pm.response.code);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser123\",\n  \"pass\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/user/login",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "login"]
            }
          }
        },
        {
          "name": "Logout User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    // Clear ALL tokens (both regular and admin)",
                  "    pm.collectionVariables.set(\"token\", \"\");",
                  "    pm.collectionVariables.set(\"admin_token\", \"\");",
                  "    ",
                  "    // Also clear from environment if exists",
                  "    if (pm.environment) {",
                  "        pm.environment.set(\"token\", \"\");",
                  "        pm.environment.set(\"admin_token\", \"\");",
                  "    }",
                  "    ",
                  "    console.log(\"✅ All tokens cleared from variables\");",
                  "    console.log(\"✅ Token invalidated on server (blacklisted)\");",
                  "} else {",
                  "    console.error(\"❌ Logout failed:\", pm.response.code);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "logout"]
            }
          }
        },
